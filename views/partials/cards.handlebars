<div class="card">
    <div class="card-image"> {{ avatar }} </div>
    <div class="card-text">
        <span class="date">{{ date }}</span>
        <h2> {{ name }} </h2>
        <p> {{ zodiac }} </p>
        <p>{{ notes }}</p>
    </div>
    <div class="card-stats">
        <div class="stat">
            <div class="value">Buddies<sup></sup></div>
            <div class="type">{{ size }}</div>
        </div>
        <div class="stat border">
            <div class="value">Category</div>
            <div class="type">{{ category }}</div>
        </div>
        <div class="stat">
            <div class="value">Preference</div>
            <div class="type">{{ preference }}</div>
        </div>
        <div><button id="reqSubmit" type="button" class="btn btn-primary">Let's Study!</button></div>
    </div>
</div>