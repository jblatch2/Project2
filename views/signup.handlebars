<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Sign Up</h2>
            <form class="signup">
                <div class="form-group">
                    <label for="exampleInputEmail1"><strong>Email address</strong></label>
                    <input type="email" class="form-control" id="email-input" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1"><strong>Password</strong></label>
                    <input type="password" class="form-control" id="password-input" placeholder="Password">
                </div>
                <div class="form-group">
                    <label for="InputPic"><strong>Avatar / Profile Pic</strong></label>

                    <input type="file" name="avatar" action="/profile" method="post" enctype="multipart/form-data" />

                </div>
                <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span> <span class="msg"></span>
                </div>
                <button type="submit" class="btn btn btn-info">Sign Up</button>
                <br /><br />
                <p><strong>Or log in <a href="/login">here</a></strong></p>
            </form>


        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/signup.js"></script>